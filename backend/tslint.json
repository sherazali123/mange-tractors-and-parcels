{
  "extends": ["tslint:recommended", "tslint-xo/space", "tslint-config-prettier"],
  "rulesDirectory": ["tslint-plugin-prettier"],
  "rules": {
    "prettier": [
      true,
      {
        "singleQuote": true,
        "trailingComma": "es5",
        "printWidth": 120
      }
    ],
    "comment-format": [true, "check-space", "check-uppercase", "allow-trailing-lowercase"],
    "unicorn/no-abusive-eslint-disable": 0,
    "trailing-comma": [
      true,
      {
        "multiline": {
          "objects": "always",
          "arrays": "always",
          "functions": "never",
          "imports": "always",
          "exports": "always",
          "typeLiterals": "ignore"
        },
        "esSpecCompliant": true
      }
    ],
    "no-implicit-dependencies": [true, ["@src"]],
    "max-line-length": [true, 120],
    "no-var-requires": true,
    "no-var-keyword": true,
    "prefer-const": true,
    "object-literal-shorthand": true,
    "no-console": false,
    "no-null-undefined-union": false,
    "no-null-keyword": false
  }
}
